<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:src="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_background"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="150dp">

            <TextView
                android:id="@+id/greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello,"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/body_grotesque"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/sub_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select the category"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#A0A0A0"
                android:fontFamily="@font/body_grotesque"
                android:layout_marginBottom="20dp" />

            <GridLayout
                android:id="@+id/service_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:paddingTop="75dp"
                android:layout_gravity="center_horizontal">

                <!-- Service Box Template -->
                <LinearLayout
                    android:id="@+id/box_hair"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/box_background"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/hair" />

                    <TextView
                        android:id="@+id/text_hair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Hair - 35$"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Repeat the above LinearLayout block for other services with corresponding image and text changes -->
                <!-- Example for Nails -->
                <LinearLayout
                    android:id="@+id/box_nails"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/box_background"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/nails" />

                    <TextView
                        android:id="@+id/text_nails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Nails - 25$"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Add similar blocks for other services -->

                <LinearLayout
                    android:id="@+id/box_shaving"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/box_background"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/shaving" />

                    <TextView
                        android:id="@+id/text_shaving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Shaving - 20$"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/box_make_up"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/box_background"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/make_up" />

                    <TextView
                        android:id="@+id/text_make_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Make up - 25$"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/box_solar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/box_background"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/solar" />

                    <TextView
                        android:id="@+id/text_solar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solar - 80$"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/box_wash"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/box_background"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/wash" />

                    <TextView
                        android:id="@+id/text_wash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wash - 30$"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:foregroundGravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:id="@+id/cart_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cart"
                android:contentDescription="Cart"
                android:layout_gravity="center"
                android:foregroundGravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
