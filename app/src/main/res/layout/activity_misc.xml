<!-- activity_misc.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_pink">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masters"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/body_grotesque" />

    <LinearLayout
        android:id="@+id/masters_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/master_box_tatiana"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/box_background"
            android:padding="16dp"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/tatiana" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tatiana"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/body_grotesque" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5 ⭐"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/master_box_maria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/box_background"
            android:padding="16dp"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/maria" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maria"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/body_grotesque" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7 ⭐"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/master_box_irina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/box_background"
            android:padding="16dp"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/irina" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Irina"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/body_grotesque" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.2 ⭐"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_below="@id/masters_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:fontFamily="@font/body_grotesque" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_title"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <GridLayout
            android:id="@+id/buttonsPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins">

            <Button
                android:id="@+id/button_11"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="11:00 AM"
                android:layout_margin="8dp"
                android:background="@drawable/box_background"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button_01"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="01:00 PM"
                android:layout_margin="8dp"
                android:background="@drawable/box_background"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button_02"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="02:00 PM"
                android:layout_margin="8dp"
                android:background="@drawable/box_background"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button_03"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="03:00 PM"
                android:layout_margin="8dp"
                android:background="@drawable/box_background"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button_05"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="05:00 PM"
                android:layout_margin="8dp"
                android:background="@drawable/box_background"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/button_06"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="06:00 PM"
                android:layout_margin="8dp"
                android:background="@drawable/box_background"
                android:textColor="@color/black" />
        </GridLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:foregroundGravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:id="@+id/cart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:layout_below="@id/buttonsPanel"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:fontFamily="@font/body_grotesque" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
